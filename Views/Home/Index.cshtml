@model List<StackOverflowProject.ViewModels.QuestionViewModel>
@{ 
    ViewBag.Title = "Home";
    
}


<div class="row">
    <div class="col-12-sm">
        <div class="p-4 mb-1 bg-primary text-white rounded">
            <h1>Learn, Shared, Build!</h1>
            <h3>Each month, over 50 million developers come to StackOverflow to learn, share their knowledge, and build their careers.</h3>
            <p class="lead">Join the world's largest developer community.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12-sm">
        <table class="table">
            @foreach(var item in Model)
            {
               Html.RenderPartial("Questions",item);
            }
        </table>
        @if (Session["CurrentUserName"] != null)
            {
                <a href="/questions/create" class="btn btn-primary">Add Question</a>
            }

    </div>
</div>

<script>
        $("a[href='/home/index']").attr("id", "active");
    
</script>